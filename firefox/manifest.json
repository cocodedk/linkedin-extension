{
  "manifest_version": 3,
  "name": "LinkedIn Lead Exporter",
  "version": "0.1.0",
  "description": "Scan LinkedIn search results, store leads, optionally evaluate them with OpenAI, and export as CSV or JSON.",
  "permissions": [
    "storage",
    "downloads",
    "scripting",
    "activeTab",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://datacvr.virk.dk/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Lead Exporter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "linkedin-lead-exporter@example.com",
      "strict_min_version": "109.0"
    }
  }
}
